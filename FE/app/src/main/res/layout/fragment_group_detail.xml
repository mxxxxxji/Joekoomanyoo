<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.group.GroupDetailFragment">

        <FrameLayout
            android:id="@+id/frame_layout_top"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_group_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/example"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="24sp"
            tools:text="경주여행"
            android:text="경주여행"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/frame_layout_top"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="20sp"
            tools:text="0000.00.00"
            android:text="0000.00.00"
            app:layout_constraintTop_toBottomOf="@id/tv_group_name"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/header_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="20sp"
            android:text="~"
            app:layout_constraintTop_toBottomOf="@id/tv_group_name"
            app:layout_constraintStart_toEndOf="@id/tv_start_date"/>

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="20sp"
            tools:text="0000.00.00"
            android:text="0000.00.00"
            app:layout_constraintTop_toBottomOf="@id/tv_group_name"
            app:layout_constraintStart_toEndOf="@id/header_from"/>

        <TextView
            android:id="@+id/header_group_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="20sp"
            tools:text="content"
            android:text="모임소개"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_start_date"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/tv_group_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:textSize="20sp"
            android:text="불국사 좋아하는 분들, 같이 여행해요"
            app:layout_constraintTop_toBottomOf="@id/header_group_content"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/header_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="20sp"
            android:text="구성원"
            app:layout_constraintTop_toBottomOf="@id/tv_group_content"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/header_members"
            app:layout_constraintStart_toStartOf="parent"/>
        <Button
            android:id="@+id/btn_subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <Button
            android:id="@+id/btn_cancellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입취소"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:id="@+id/btn_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴하기"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="groupListResponse"
            type="com.ssafy.heritage.data.remote.response.GroupListResponse"/>
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:cardBackgroundColor="@color/white_50"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp">
            <ImageView
                android:id="@+id/iv_member_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/monster"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_leader_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginVertical="5dp"
                tools:text="방장 닉네임"
                android:text="@{groupListResponse.groupMakerNickname}"
                app:layout_constraintStart_toEndOf="@id/iv_member_img"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                tools:text="설명"
                android:text="@{groupListResponse.groupName}"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_leader_nickname"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@{String.valueOf(groupListResponse.startDate)}"
                tools:text="0000.00.00"
                app:layout_constraintTop_toBottomOf="@id/tv_group_name"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/header_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=" ~ "
                tools:text=" ~ "
                app:layout_constraintTop_toTopOf="@id/tv_start_date"
                app:layout_constraintBottom_toBottomOf="@id/tv_start_date"
                app:layout_constraintStart_toEndOf="@id/tv_start_date"/>
            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@{String.valueOf(groupListResponse.endDate)}"
                tools:text="0000.00.00"
                app:layout_constraintStart_toEndOf="@id/header_from"
                app:layout_constraintTop_toTopOf="@id/tv_start_date"
                app:layout_constraintBottom_toBottomOf="@id/tv_start_date"/>

            <TextView
                android:id="@+id/tv_kids_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:text="아이"
                tools:text="아이동반"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv_start_date"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_global_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:text="글로벌"
                tools:text="외국인여부"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/tv_kids_check"
                app:layout_constraintBottom_toBottomOf="@id/tv_kids_check"
                app:layout_constraintStart_toEndOf="@id/tv_kids_check"/>
            <TextView
                android:id="@+id/tv_age_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:text="@{String.valueOf(groupListResponse.age)}"
                tools:text="나이대"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/tv_global_check"
                app:layout_constraintBottom_toBottomOf="@id/tv_global_check"
                app:layout_constraintStart_toEndOf="@id/tv_global_check"/>
            <ImageView
                android:id="@+id/iv_lock_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_lock_on"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>